@model Final.Models.Gallery

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Gallery</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input class="custom-file-input" asp-for="Img">
                <label asp-for="Img"></label>
                <input accept="image/*" class="form-control" asp-for="Img">
                <span class="text-danger small" asp-validation-for="Img"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-gray-200">Back to List</a>
</div>