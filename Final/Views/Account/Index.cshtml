@model AppUser

<section id="account">
    <div class="container">
        <h1 class="pb-5 text-center" style="font-family: 'Italiana', serif;">My Account</h1>
        <div class="col-md-12 m-auto showing-navbar">
            <nav class="navbar navbar-expand-lg d-lg-block">
                <div class="collapse navbar-collapse justify-content-center"
                     id="navbarNav">
                    <div class="navbar-nav">
                        <a class="nav-link active"
                           asp-action="Index" asp-controller="Account">Dashboard</a>
                        <a class="nav-link" asp-action="Index" asp-controller="Order">Orders</a>
                        <a class="nav-link" asp-action="ChangePassword" asp-controller="Account" asp->Change Password</a>
                        <a class="nav-link" asp-action="Logout" asp-controller="Account">Logout</a>
                    </div>
                </div>
            </nav>
            <div class="row hidden-navbar">
                <div class="col-12 responsive-row m-auto">
                    <a class="nav-link pt-4 pb-4"
                       asp-action="Index" asp-controller="Account">Dashboard</a>
                    <a class="nav-link pt-4 pb-4" asp-action="Index" asp-controller="Order">Orders</a>
                    <a class="nav-link" asp-action="ChangePassword" asp-controller="Account">Change Password</a>
                    <a class="nav-link pt-4 pb-4" asp-action="Logout" asp-controller="Account">Logout</a>
                </div>

            </div>
            <div class="col-md-12 dashboard mt-5 m-auto">
                <p>Hello @Model.UserName (not @Model.UserName? <a class="sign" asp-action="Logout" asp-controller="Account">Log out</a>)</p>
                <p>From your account dashboard you can view your recent orders, manage your account, and change your password.</p>
            </div>
        </div>
    </div>
</section>