@model HomeViewModel

<section id="home-banner" class="pb-5">
    <div class="container">
        <div class="row align-items-center m-auto">
            <div class="col-lg-6 col-md-8 col-12 bannerInfo">
                <div class="container">
                    <h2 class="title animation-text" style="font-family: 'Italiana', serif; font-size: 55px;" data-aos="fade-right" data-aos-delay="400">
                        <b>
                            <span class="title-word title-word-1">We</span>
                            <span class="title-word title-word-2">tell</span>
                            <span class="title-word title-word-3">stories</span><br>
                            <span class="title-word title-word-4">with</span>
                            <span class="title-word title-word-5">flowers</span>
                        </b>
                    </h2>
                    <a class="shop-btn btn btn-outline-dark" href="/category/index" data-aos="fade-right" data-aos-delay="500" type="button" style="width: 30%;">SHOP NOW</a>
                </div>
            </div>
            <div class="col-lg-6 col-md-4 col-12">
                <img src="~/image/banner.webp" alt="" class="banner-img" style="width: 95%" data-aos="fade-left" data-aos-delay="600">
            </div>
        </div>
    </div>
</section>

<section id="season-finest" class="pt-5 pb-5 flower-carousel">
    <div class="container">
        <div class="text-center pb-5" data-aos="fade-up" data-aos-delay="300">
            <h1 class="pb-3" style="font-family: 'Italiana', serif;">Season Finest</h1>
            <button class="me-5 btn btn-light" id="flower-link">FLOWERS</button>
            <button class="btn btn-light" id="plant-link">PLANTS</button>
        </div>
        <div class="carousel" data-flickity='{ "groupCells": true }'>
            @foreach (SeasonFinest item in Model.seasonFinests)
            {
                <div class="carousel-cell">
                    <div class="item">
                        <div class="card">
                            <div class="inner">
                                <img src="~/admin/assets/img/@item.Image" class="card-img-top product" alt="flower">
                            </div>
                            <div class="card-body text-center">
                                <h4 class="card-text pt-3" style="font-family: 'Italiana', serif;">@item.Name</h4>
                                <span>@item.Price</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section id="season-finest" class="pt-5 pb-5 plant-carousel d-none">
    <div class="container">
        <div class="text-center pb-5" data-aos="fade-up" data-aos-delay="300">
            <h1 class="pb-3" style="font-family: 'Italiana', serif;">Season Finest</h1>
            <button class="me-5 btn btn-light" id="flower-link">FLOWERS</button>
            <button class="btn btn-light" id="plant-link">PLANTS</button>
        </div>
        <div class="carousel" data-flickity='{ "groupCells": true }'>
            @foreach (FinestPlant item in Model.finestPlants)
            {
                <div class="carousel-cell">
                    <div class="item">
                        <div class="card">
                            <div class="inner">
                                <img src="~/admin/assets/img/@item.Image" class="card-img-top product" alt="flower">
                            </div>
                            <div class="card-body text-center">
                                <h4 class="card-text pt-3" style="font-family: 'Italiana', serif;">@item.Name</h4>
                                <span>@item.Price</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

    <section id="info-part" class="pt-5 pb-5">
