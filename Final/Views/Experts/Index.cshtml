<section id="login" style="margin-top: 170px!important;">
    <div class="container information">
        <div class="row">
            <div class="col-lg-6 col-md-11 col-11 m-auto dashboard">
                <h1 class="pb-5 text-center" style="font-family: 'Italiana', serif;">Speak to our experts</h1>
                <div class="inner1">
                    <form method="post" action="/experts/subject">
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <label for="" class="pb-2">First name *</label>
                                <input class="form-control form-control-lg mb-2"
                                       type="text" name="name"/>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <label for="" class="pb-2">Last name *</label>
                                <input class="form-control form-control-lg mb-2"
                                       type="text" name="surname"/>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <label for="" class="pb-2">Phone number *</label>
                                <input class="form-control form-control-lg mb-2"
                                       type="tel" name="phone"/>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <label for="" class="pb-2">Email address *</label>
                                <input class="form-control form-control-lg mb-2"
                                       type="email" name="email"/>
                            </div>
                        </div>
                        <label for="" class="pb-2">Subject *</label>
                        <input class="form-control form-control-lg mb-2" type="text" name="subject"/>
                        <label for="" class="pb-2">Your message *</label>
                        <textarea class="form-control mb-5" id="exampleFormControlTextarea1" rows="4" name="message"></textarea>
                        <input type="submit" value="SUBMIT" class="shop-btn btn btn-outline-dark login-btn m-auto mb-3" style="border-radius: 20px!important;" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
