            <p class="pt-5">Look for the heart to save favorites while you shop.</p>
            <a class="shop-btn btn btn-outline-dark" href="/category/index" type="button">START SHOPPING</a>
        </div> 
            }
            else
            {
                <div class="col-md-8 col-11 m-auto">
                    <h1 class="pb-5 text-center" style="font-family: 'Italiana', serif;">Wishlist</h1>
                    @foreach (var item in Model)
                    {
                    <div class="row">
                        <div class="col-lg-2 col-md-2 col-1 m-auto">
                            <a href="/wishlist/delete/@item.ProductId" type="submit"><i class="bi bi-x-lg x-icon"></i></a>
                        </div>
                        <div class="col-lg-2 col-md-2 col-1 m-auto">
                            <img src="~/image/@item.Image" alt="" style="width: 30%;" class="img-responsive">
                        </div>
                        <div class="col-lg-5 col-md-4 col-5 m-auto">
                            <p>@item.Name</p>
                            <p>$@item.Price</p>
                        </div>
                        <div class="col-lg-3 col-md-4 col-12 m-auto responsive-btn">
                            <a class="shop-btn btn btn-outline-dark addtocartBtn" href="/basket/cart/@item.ProductId" type="button" style="margin-top: 0px!important;">ADD TO CART</a>
                        </div>
                    </div>
                    <hr class="mt-5 mb-5">
                    }
                </div>
            }
            </div>
    </div>
</section>