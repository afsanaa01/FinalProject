@model List<Sold>
@{ ViewData["Title"] = "Index"; }

<section id="account">
        <div class="container">
            <h1 class="pb-5 text-center" style="font-family: 'Italiana', serif;">My Account</h1>
            <div class="col-md-12 m-auto showing-navbar">
                <nav class="navbar navbar-expand-lg d-lg-block">
                    <div class="collapse navbar-collapse justify-content-center"
                         id="navbarNav">
                        <div class="navbar-nav">
                            <a class="nav-link"
                               asp-action="Index" asp-controller="Account">Dashboard</a>
                            <a class="nav-link active" asp-action="Index" asp-controller="Order">Orders</a>
                            <a class="nav-link" asp-action="ChangePassword" asp-controller="Account">Change Password</a>
                            <a class="nav-link" asp-action="Logout" asp-controller="Account">Logout</a>
                        </div>
                    </div>
                </nav>
                <div class="row hidden-navbar">
                    <div class="col-12 responsive-row m-auto">
                        <a class="nav-link pt-4 pb-4"
                           asp-action="Index" asp-controller="Account">Dashboard</a>
                        <a class="nav-link pt-4 pb-4 active" asp-action="Index" asp-controller="Order">Orders</a>
                        <a class="nav-link" asp-action="ChangePassword" asp-controller="Account">Change Password</a>
                        <a class="nav-link pt-4 pb-4" asp-action="Logout" asp-controller="Account">Logout</a>
                    </div>
                </div>
                @if (Model.Count == 0)
                {
            <div class="dashboard mt-5">
                <div class="row">
                    <div class="col-md-6 col-12">
                        <p class="pt-2"><i class="bi bi-patch-check"></i> No order has been made yet.</p>
                        <a class="shop-btn btn btn-outline-dark mt-0 mb-3 justify-content-end" asp-action="Index" asp-controller="Category" type="button">BROWSE PRODUCTS</a>
                    </div>
                </div>
            </div> 
            }
                        else
                        {
                    <div class="container">
                        <div class="row">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-11 m-auto empty-basket">
                                    <div class="dashboard" style="padding-bottom: 0px!important;">
                                        <h4 class="pb-4" style="font-family: 'Italiana', serif"> <i class="bi bi-box2-heart" style="color: palevioletred;"></i> Thank you for your orders.</h4>
                                    </div>

                                </div>
                            </div>
                            @foreach (Sold item in Model)
                            {
                        <div class="col-lg-2 col-md-4 col-4 mt-4">
                            <div class="card inner2 product-shadow">
                                <div class="inner">
                                    <img src="~/admin/assets/img/@item.Image"
                                         class="card-img-top product"
                                         alt="flower" />
                                </div>
                                <div class="card-body text-center">
                                    <h4 class="card-text pt-3">@item.Name</h4>
                                </div>
                            </div>
                        </div>
                        }
                            <div class="row">
                                <div class="col-lg-7 col-md-10 col-12">
                                    <a class="shop-btn btn btn-outline-dark" asp-action="Index" asp-controller="Category">BROWSE MORE PRODUCTS</a>
                                </div>
                                <div class="col-lg-5 col-md-5 col-5">
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div> 
</section>